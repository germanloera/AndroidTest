<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F1"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineH5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideLineH1"
        android:layout_margin="2dp"
        android:text="0"
        android:textSize="80sp"
        android:background="#FAFAFA"
        android:gravity="end|bottom"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH1"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH2"
        app:layout_constraintRight_toRightOf="@id/guideLineV1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="C"
        android:textColor="#008FC7"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH1"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH2"
        app:layout_constraintRight_toRightOf="@id/guideLineV2"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV1"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="%"
        android:textColor="#008FC7"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH1"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH2"
        app:layout_constraintRight_toRightOf="@id/guideLineV3"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV2"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="/"
        android:textColor="#008FC7"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH1"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV3"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="DEL"
        android:textColor="#008FC7"
        android:textSize="40sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH2"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH3"
        app:layout_constraintRight_toRightOf="@id/guideLineV1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH2"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH3"
        app:layout_constraintRight_toRightOf="@id/guideLineV2"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV1"
        android:background="#f5f7f6"
        android:layout_margin="2dp"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH2"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH3"
        app:layout_constraintRight_toRightOf="@id/guideLineV3"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV2"
        android:background="#f5f7f6"
        android:layout_margin="2dp"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH2"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV3"
        android:background="#f5f7f6"
        android:layout_margin="2dp"
        android:text="X"
        android:textColor="#008FC7"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH3"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH4"
        app:layout_constraintRight_toRightOf="@id/guideLineV1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#f5f7f6"
        android:layout_margin="2dp"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH3"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH4"
        app:layout_constraintRight_toRightOf="@id/guideLineV2"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV1"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH3"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH4"
        app:layout_constraintRight_toRightOf="@id/guideLineV3"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV2"
        android:background="#f5f7f6"
        android:layout_margin="2dp"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH3"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV3"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="-"
        android:textColor="#008FC7"
        android:textSize="60sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH4"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH5"
        app:layout_constraintRight_toRightOf="@id/guideLineV1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH4"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH5"
        app:layout_constraintRight_toRightOf="@id/guideLineV2"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV1"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH4"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH5"
        app:layout_constraintRight_toRightOf="@id/guideLineV3"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV2"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH4"
        app:layout_constraintBottom_toBottomOf="@id/guideLineH5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV3"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="+"
        android:textColor="#008FC7"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideLineV1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="+/-"
        android:textColor="#008FC7"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideLineV2"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV1"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideLineV3"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV2"
        android:layout_margin="2dp"
        android:background="#f5f7f6"
        android:text="."
        android:textColor="#008FC7"
        android:textSize="60sp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineH5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideLineV3"
        android:layout_margin="2dp"
        android:background="#86d681"
        android:text="="
        android:textColor="#f5f7f6"
        android:textSize="50sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>